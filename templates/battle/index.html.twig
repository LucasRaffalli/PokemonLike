{% extends 'base.html.twig' %}

{% block title %}Ar√®ne de Combat{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-20">
  <div class="max-w-6xl mx-auto mt-8">
    {% for message in app.flashes('success') %}
      <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
        {{ message }}
      </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        {{ message }}
      </div>
    {% endfor %}

    <h1 class="text-4xl font-bold mb-8">‚öîÔ∏è Ar√®ne de Combat</h1>

    {# Statistiques #}
    <div class="grid md:grid-cols-3 gap-6 mb-8">
      <div class="bg-gradient-to-br from-green-500 to-green-600 text-white rounded-lg shadow-lg p-6">
        <h3 class="text-lg font-semibold mb-2">Victoires</h3>
        <p class="text-4xl font-bold">{{ wins }}</p>
      </div>
      <div class="bg-gradient-to-br from-red-500 to-red-600 text-white rounded-lg shadow-lg p-6">
        <h3 class="text-lg font-semibold mb-2">D√©faites</h3>
        <p class="text-4xl font-bold">{{ losses }}</p>
      </div>
      <div class="bg-gradient-to-br from-blue-500 to-blue-600 text-white rounded-lg shadow-lg p-6">
        <h3 class="text-lg font-semibold mb-2">Total</h3>
        <p class="text-4xl font-bold">{{ totalBattles }}</p>
      </div>
    </div>

    {# D√©fis en attente #}
    {% if pendingBattles is not empty %}
      <div class="bg-yellow-50 border-2 border-yellow-400 rounded-lg p-6 mb-8">
        <h2 class="text-2xl font-bold mb-4">üì¨ D√©fis re√ßus ({{ pendingBattles|length }})</h2>
        <div class="space-y-4">
          {% for battle in pendingBattles %}
            <div class="bg-white rounded-lg p-4 flex justify-between items-center">
              <div>
                <p class="font-semibold text-lg">{{ battle.challenger.pseudo }} vous d√©fie !</p>
                <p class="text-sm text-gray-600">Re√ßu le {{ battle.createdAt|date('d/m/Y √† H:i') }}</p>
              </div>
              <div class="flex gap-2">
                <form method="post" action="{{ path('app_battle_accept', {id: battle.id}) }}" class="inline">
                  <button type="submit" class="bg-green-500 text-white px-4 py-2 rounded-lg hover:bg-green-600 transition">
                    ‚úì Accepter
                  </button>
                </form>
                <form method="post" action="{{ path('app_battle_decline', {id: battle.id}) }}" class="inline">
                  <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-600 transition">
                    ‚úó Refuser
                  </button>
                </form>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    {% endif %}

    {# Liste des adversaires #}
    <div class="bg-white rounded-lg shadow-lg p-6 mb-8">
      <h2 class="text-2xl font-bold mb-4">üë• Adversaires disponibles</h2>
      
      {% if availableOpponents is empty %}
        <p class="text-gray-600 text-center py-8">Aucun autre dresseur disponible pour le moment.</p>
      {% else %}
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
          {% for opponent in availableOpponents %}
            <div class="border border-gray-200 rounded-lg p-4 hover:border-primary transition">
              <h3 class="font-bold text-lg mb-2">{{ opponent.pseudo }}</h3>
              <p class="text-sm text-gray-600 mb-3">{{ opponent.email }}</p>
              <form method="post" action="{{ path('app_battle_challenge', {id: opponent.id.toRfc4122}) }}">
                <button type="submit" class="w-full bg-primary text-white py-2 rounded-lg hover:bg-primary-dark transition">
                  ‚öîÔ∏è D√©fier
                </button>
              </form>
            </div>
          {% endfor %}
        </div>
      {% endif %}
    </div>

    {# Historique des combats #}
    <div class="bg-white rounded-lg shadow-lg p-6">
      <h2 class="text-2xl font-bold mb-4">üìú Historique des combats</h2>
      
      {% if battleHistory is empty %}
        <p class="text-gray-600 text-center py-8">Aucun combat pour le moment. Lancez votre premier d√©fi !</p>
      {% else %}
        <div class="space-y-3">
          {% for battle in battleHistory %}
            <div class="border border-gray-200 rounded-lg p-4 {% if battle.status == 'completed' %}hover:border-primary{% endif %} transition">
              <div class="flex justify-between items-center">
                <div class="flex-1">
                  <div class="flex items-center gap-2 mb-1">
                    {% if battle.status == 'pending' %}
                      <span class="bg-yellow-100 text-yellow-800 text-xs px-2 py-1 rounded">En attente</span>
                    {% elseif battle.status == 'completed' %}
                      <span class="bg-green-100 text-green-800 text-xs px-2 py-1 rounded">Termin√©</span>
                    {% elseif battle.status == 'cancelled' %}
                      <span class="bg-gray-100 text-gray-800 text-xs px-2 py-1 rounded">Annul√©</span>
                    {% endif %}
                    
                    <span class="font-semibold">{{ battle.challenger.pseudo }}</span>
                    <span>vs</span>
                    <span class="font-semibold">{{ battle.opponent.pseudo }}</span>
                  </div>
                  
                  {% if battle.status == 'completed' and battle.winner %}
                    <p class="text-sm">
                      üèÜ Vainqueur: 
                      <span class="font-bold {% if battle.winner == app.user %}text-green-600{% else %}text-red-600{% endif %}">
                        {{ battle.winner.pseudo }}
                        {% if battle.winner == app.user %}(Vous){% endif %}
                      </span>
                    </p>
                  {% endif %}
                  
                  <p class="text-xs text-gray-500 mt-1">{{ battle.createdAt|date('d/m/Y √† H:i') }}</p>
                </div>
                
                {% if battle.status == 'completed' %}
                  <a href="{{ path('app_battle_view', {id: battle.id}) }}" class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 transition">
                    Voir le d√©tail
                  </a>
                {% elseif battle.status == 'pending' and battle.challenger == app.user %}
                  <span class="text-sm text-gray-500">D√©fi envoy√©...</span>
                {% endif %}
              </div>
            </div>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
</div>
{% endblock %}
