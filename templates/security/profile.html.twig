{% extends 'base.html.twig' %}

{% block title %}Modifier mon profil{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-20">
  <div class="max-w-2xl mx-auto mt-8">
    <div class="mb-6">
      <a href="{{ path('app_dashboard') }}" class="text-primary hover:text-primary-dark transition">← Retour au dashboard</a>
    </div>

    {% for message in app.flashes('success') %}
      <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
        {{ message }}
      </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        {{ message }}
      </div>
    {% endfor %}

    <div class="bg-white rounded-lg shadow-xl p-8">
      <h1 class="text-3xl font-bold text-center mb-8">Modifier mon profil</h1>

      {{ form_start(profileForm) }}
        <div class="space-y-6">
          <div>
            {{ form_label(profileForm.pseudo, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
            {{ form_widget(profileForm.pseudo, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent'}}) }}
            {{ form_errors(profileForm.pseudo, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
          </div>

          <div>
            {{ form_label(profileForm.email, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
            {{ form_widget(profileForm.email, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent'}}) }}
            {{ form_errors(profileForm.email, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
          </div>

          <div class="border-t pt-6">
            <h2 class="text-xl font-semibold mb-4">Sécurité</h2>
            
            <div class="mb-4">
              {{ form_label(profileForm.currentPassword, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
              {{ form_widget(profileForm.currentPassword, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent'}}) }}
              {{ form_errors(profileForm.currentPassword, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
              <p class="text-xs text-gray-500 mt-1">Requis pour valider toute modification</p>
            </div>

            <div>
              {{ form_label(profileForm.newPassword, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
              {{ form_widget(profileForm.newPassword, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent', 'placeholder': 'Laissez vide pour ne pas changer'}}) }}
              {{ form_errors(profileForm.newPassword, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
              <p class="text-xs text-gray-500 mt-1">Minimum 6 caractères</p>
            </div>
          </div>

          <div class="flex gap-4">
            <button type="submit" class="flex-1 bg-primary text-white py-3 rounded-lg font-semibold hover:bg-primary-dark transition">
              Enregistrer les modifications
            </button>
            <a href="{{ path('app_dashboard') }}" class="flex-1 bg-gray-200 text-gray-700 py-3 rounded-lg font-semibold hover:bg-gray-300 transition text-center">
              Annuler
            </a>
          </div>
        </div>
      {{ form_end(profileForm) }}
    </div>

    <div class="mt-6 bg-yellow-50 border border-yellow-200 rounded-lg p-4">
      <h3 class="font-semibold text-yellow-800 mb-2">⚠️ Informations importantes</h3>
      <ul class="text-sm text-yellow-700 space-y-1">
        <li>• Vous devez entrer votre mot de passe actuel pour valider toute modification</li>
        <li>• Si vous changez votre email, assurez-vous qu'il soit valide</li>
        <li>• Le nouveau mot de passe est optionnel (laissez vide si vous ne voulez pas le changer)</li>
      </ul>
    </div>
  </div>
</div>
{% endblock %}
